<!DOCTYPE html>
<html>
<body>
  <!-- Navbar -->
  <nav class="navbar p-0 fixed-top d-flex flex-row">
    <div class="navbar-brand-wrapper d-flex d-lg-none align-items-center justify-content-center">
      <a class="navbar-brand brand-logo-mini" href="/admin"><img src="/assets/images/logo-mini.svg" alt="logo" /></a>
    </div>
    <div class="navbar-menu-wrapper flex-grow d-flex align-items-stretch">
      <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize" id="sidebarToggle">
        <span class="mdi mdi-menu"></span>
      </button>
      <ul class="navbar-nav w-100">
        <li class="nav-item w-100">
          <form class="nav-link mt-2 mt-md-0 d-none d-lg-flex search">
            <input type="text" class="form-control" placeholder="Search products">
          </form>
        </li>
      </ul>
      <ul class="navbar-nav navbar-nav-right">
        <li class="nav-item nav-settings d-none d-lg-block">
          <a class="nav-link" href="#">
            <i class="mdi mdi-view-grid"></i>
          </a>
        </li>
        <!-- notification section -->
        <li class="nav-item dropdown border-left">
          <a class="nav-link count-indicator dropdown-toggle" id="notificationDropdown" href="#" data-toggle="dropdown">
            <i class="mdi mdi-bell"></i>
            <span class="count bg-danger"></span>
          </a>
          <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
            <h6 class="p-3 mb-0">Notifications</h6>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item preview-item">
              <div class="preview-thumbnail">
                <div class="preview-icon bg-dark rounded-circle">
                  <i class="mdi mdi-calendar text-success"></i>
                </div>
              </div>
              <div class="preview-item-content">
                <p class="preview-subject mb-1">Event today</p>
                <p class="text-muted ellipsis mb-0"> Just a reminder that you have an event today </p>
              </div>
            </a>
            <div class="dropdown-divider"></div>
            <p class="p-3 mb-0 text-center">See all notifications</p>
          </div>
        </li>
        <!-- account section -->
        <li class="nav-item dropdown">
          <a class="nav-link" id="profileDropdown" href="#" data-toggle="dropdown">
            <div class="navbar-profile">
              <img class="img-xs rounded-circle" src="/assets/images/faces/face15.jpg" alt="">
              <p class="mb-0 d-none d-sm-block navbar-profile-name">Henry Klein</p>
              <i class="mdi mdi-menu-down d-none d-sm-block"></i>
            </div>
          </a>
          <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="profileDropdown">
            <h6 class="p-3 mb-0">Profile</h6>
            <div class="dropdown-divider"></div>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item preview-item">
              <div class="preview-thumbnail">
                <div class="preview-icon bg-dark rounded-circle">
                  <i class="mdi mdi-logout text-danger"></i>
                </div>
              </div>
              <div class="preview-item-content">
                <p class="preview-subject mb-1">Log out</p>
              </div>
            </a>
            <div class="dropdown-divider"></div>
          </div>
        </li>
      </ul>
    </div>
  </nav>

  <!-- Sidebar -->
  <nav class="sidebar sidebar-offcanvas" id="sidebar">
    <div class="sidebar-brand-wrapper d-none d-lg-flex align-items-center justify-content-center fixed-top">
      <a class="sidebar-brand brand-logo" href="/admin"><img src="/assets/images/logo.svg" alt="logo" /></a>
      <a class="sidebar-brand brand-logo-mini" href="/admin"><img src="/assets/images/logo-mini.svg" alt="logo" /></a>
    </div>
    <ul class="nav mt-3">
      <li class="nav-item profile"></li>
      <li class="nav-item nav-category">
        <span class="nav-link">Navigation</span>
      </li>
      <!-- dashboard  -->
      <li class="nav-item menu-items">
        <a class="nav-link" href="/admin/dashboard" id="dashboard-link">
          <span class="menu-icon">
            <i class="mdi mdi-speedometer"></i>
          </span>
          <span class="menu-title">Dashboard</span>
        </a>
      </li>
      <!-- offers -->
      <li class="nav-item menu-items">
        <a class="nav-link" href="/admin/offers" id="offers-link">
          <span class="menu-icon">
            <i class="mdi mdi-sale"></i>
          </span>
          <span class="menu-title">Offers</span>
        </a>
      </li>
      <li class="nav-item menu-items">
        <a class="nav-link" href="/admin/coupon" id="coupon-link">
          <span class="menu-icon">
            <i class="mdi mdi-ticket-percent"></i>
          </span>
          <span class="menu-title">Coupons</span>
        </a>
      </li>
      <!-- Users -->
      <li class="nav-item menu-items">
        <a class="nav-link" href="/admin/users" id="users-link">
          <span class="menu-icon">
            <i class="mdi mdi-account-circle"></i>
          </span>
          <span class="menu-title">Users</span>
        </a>
      </li>
      <!-- product  -->
      <li class="nav-item menu-items">
        <a class="nav-link" href="/admin/product" id="product-link">
          <span class="menu-icon">
            <i class="mdi mdi-clipboard-list"></i>
          </span>
          <span class="menu-title">Product</span>
          <i class="menu-arrow"></i>
        </a>
      </li>
      <!-- Category -->
      <li class="nav-item menu-items">
        <a class="nav-link" href="/admin/category" id="category-link">
          <span class="menu-icon">
            <i class="mdi mdi-shape"></i>
          </span>
          <span class="menu-title">Category</span>
        </a>
      </li>
      <li class="nav-item menu-items">
        <a class="nav-link" href="/admin/orders" id="orders-link">
          <span class="menu-icon">
            <i class="mdi mdi-basket"></i>
          </span>
          <span class="menu-title">Orders</span>
        </a>
      </li>
      <!-- logout -->
      <li class="nav-item menu-items">
        <a class="nav-link" href="/logout">
          <span class="menu-icon">
            <i class="mdi mdi-logout"></i>
          </span>
          <span class="menu-title">Logout</span>
        </a>
      </li>
    </ul>
  </nav>

  <style>
    /* Navbar styles */
    .navbar {
      background: #191c24;
      height: 60px;
    }

    .navbar-brand-wrapper {
      width: 60px;
      background: #191c24;
    }

    .navbar-menu-wrapper {
      padding: 0 1rem;
      background: #191c24;
    }

    .navbar-profile {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .img-xs {
      width: 32px;
      height: 32px;
    }

    .preview-list {
      min-width: 280px;
      background: #191c24;
      border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .preview-item {
      display: flex;
      align-items: center;
      padding: 0.8rem 1rem;
      color: #6c7293;
      text-decoration: none;
    }

    .preview-item:hover {
      background: rgba(0, 0, 0, 0.2);
      color: #fff;
    }

    /* Sidebar styles */
    .sidebar {
      position: fixed;
      top: 60px;
      left: 0;
      height: calc(100vh - 60px);
      width: 260px;
      background: #191c24;
      transition: all 0.3s ease;
      z-index: 997;
    }

    @media (max-width: 991.98px) {
      .sidebar {
        left: -260px;
      }

      .sidebar.show {
        left: 0;
      }

      body {
        padding-left: 0;
      }
    }

    @media (min-width: 992px) {
      body {
        padding-left: 260px;
      }
    }

    /* Content area padding */
    .main-content {
      padding-top: 60px;
      min-height: 100vh;
      transition: all 0.3s ease;
    }
  </style>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const sidebar = document.getElementById('sidebar');
      const sidebarToggle = document.getElementById('sidebarToggle');

      // Toggle sidebar
      if (sidebarToggle) {
        sidebarToggle.addEventListener('click', (e) => {
          e.preventDefault();
          sidebar.classList.toggle('show');
        });
      }

      // Close sidebar when clicking outside on mobile
      document.addEventListener('click', (e) => {
        if (window.innerWidth < 992) {
          if (!sidebar.contains(e.target) && !sidebarToggle.contains(e.target)) {
            sidebar.classList.remove('show');
          }
        }
      });

      // Handle dropdown toggles
      document.querySelectorAll('[data-toggle="dropdown"]').forEach(dropdownToggle => {
        dropdownToggle.addEventListener('click', (e) => {
          e.preventDefault();
          const dropdownMenu = dropdownToggle.nextElementSibling;
          dropdownMenu.classList.toggle('show');
        });
      });

      // Close dropdowns when clicking outside
      document.addEventListener('click', (e) => {
        const dropdowns = document.querySelectorAll('.dropdown-menu.show');
        dropdowns.forEach(dropdown => {
          if (!dropdown.previousElementSibling.contains(e.target)) {
            dropdown.classList.remove('show');
          }
        });
      });

      // Active state handling
      const currentPath = window.location.pathname;
      const linkMap = {
        '/admin/dashboard': 'dashboard-link',
        '/admin/offers': 'offers-link',
        '/admin/coupon': 'coupon-link',
        '/admin/users': 'users-link',
        '/admin/product': 'product-link',
        '/admin/category': 'category-link',
        '/admin/orders': 'orders-link'
      };

      const linkId = linkMap[currentPath];
      if (linkId) {
        const activeLink = document.getElementById(linkId);
        if (activeLink) {
          activeLink.classList.add('active');
        }
      }
    });
  </script>
</body>
</html>