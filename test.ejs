<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Elegant Checkout Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>

    <style>
        body {
            background-color: #f0f2f5;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .container {
            background-color: #ffffff;
            border-radius: 20px;
            box-shadow: 0 0 30px rgba(0,0,0,0.1);
            padding: 40px;
            margin-top: 50px;
            margin-bottom: 50px;
        }
        h2, h3 {
            color: #3b5998;
            margin-bottom: 25px;
            font-weight: 600;
        }
        .address-card {
            border: 2px solid #e9ecef;
            border-radius: 15px;
            padding: 20px;
            cursor: pointer;
            transition: all 0.3s;
            height: 100%;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
        .address-card:hover, .address-card.selected {
            border-color: #3b5998;
            background-color: #f0f2f5;
            transform: translateY(-5px);
        }
        .address-card input[type="radio"] {
            display: none;
        }
        .btn-primary {
            background-color: #3b5998;
            border: none;
            padding: 10px 20px;
            font-weight: 600;
            transition: all 0.3s;
        }
        .btn-primary:hover {
            background-color: #2d4373;
            transform: translateY(-2px);
        }
        .product-list {
            margin-bottom: 30px;
        }
        .product-item {
            border-bottom: 1px solid #e9ecef;
            padding: 15px 0;
            transition: all 0.3s;
        }
        .product-item:hover {
            background-color: #f8f9fa;
            padding-left: 10px;
        }
        .summary-card {
            background-color: #f8f9fa;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
        .coupon-wrapper {
            position: relative;
            margin-bottom: 20px;
        }
        .coupon-input {
            display: flex;
            margin-bottom: 10px;
        }
        .coupon-input input {
            border-top-right-radius: 0;
            border-bottom-right-radius: 0;
            border: 2px solid #e9ecef;
            transition: all 0.3s;
        }
        .coupon-input input:focus {
            border-color: #3b5998;
            box-shadow: none;
        }
        .coupon-input button {
            border-top-left-radius: 0;
            border-bottom-left-radius: 0;
        }
        .coupon-badge {
            display: none;
            background-color: #e3f2fd;
            border-radius: 10px;
            padding: 10px 15px;
            margin-bottom: 15px;
        }
        .coupon-badge.active {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .coupon-badge .remove-coupon {
            color: #dc3545;
            cursor: pointer;
            border: none;
            background: none;
            padding: 0;
            margin-left: 10px;
        }
        .delivery-charge {
            font-style: italic;
            color: #6c757d;
        }
        .summary-total {
            font-size: 1.2em;
            color: #3b5998;
        }
        .coupenerror {
            margin-bottom: 10px;
        }
        #applayerror {
            display: block;
            margin-top: 5px;
        }
        .discount-charge {
            color: #28a745;
            font-weight: 500;
        }
        .modal-content {
            border-radius: 15px;
        }
        .modal-header {
            background-color: #f8f9fa;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Rest of the HTML structure remains the same -->
        <div class="row">
            <div class="col-lg-8">
                <h2 class="mb-4"><i class="fas fa-shopping-cart me-2"></i>Checkout</h2>
                <form id="checkoutForm">
                    <h3><i class="fas fa-box-open me-2"></i>Your Cart</h3>
                    <div class="product-list">
                        <% cart.product.forEach(product=>{ %>
                        <div class="product-item d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-0"><%= product.productid.name %></h6>
                                <p class="text-muted">Quantity: <%= product.quantity %></p>
                            </div>
                            <span class="fw-bold">₹ <%=product.price %></span>
                        </div>
                        <% } )%>
                    </div>

                    <div class="summary-card">
                        <h3><i class="fas fa-receipt me-2"></i>Order Summary</h3>
                        <div class="coupon-wrapper">
                            <div class="coupon-badge" id="activeCoupon">
                                <span><i class="fas fa-tag me-2"></i><span id="couponCode"></span></span>
                                <button type="button" class="remove-coupon" id="removeCoupon">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                            <div class="coupon-input">
                                <input type="text" class="form-control" id="apply" maxlength="7" placeholder="Enter coupon code">
                                <button class="btn btn-primary" id="applysubmit">Apply</button>
                            </div>
                            <small id="applayerror" class="text-danger"></small>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal</span>
                            <span id="subtotal" class="summary-total">₹ <%=cart.totalprice.toFixed(2)%></span>
                        </div>
                        <div class="d-none justify-content-between mb-2 discount-charge">
                            <span>Coupon Discount</span>
                            <span id="coupondiscount" class="text-success"></span>
                        </div>
                        <div class="d-flex justify-content-between mb-2 delivery-charge">
                            <span>Delivery Charge</span>
                            <span id="deliveryCharge"><del>₹50</del></span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-4">
                            <strong>Total</strong>
                            <strong id="total" class="summary-total">₹ <%=cart.totalprice.toFixed(2)%></strong>
                        </div>
                        <!-- Rest of the summary card content remains the same -->
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const couponInput = document.getElementById('apply');
            const applyButton = document.getElementById('applysubmit');
            const removeCouponButton = document.getElementById('removeCoupon');
            const activeCouponBadge = document.getElementById('activeCoupon');
            const couponCodeSpan = document.getElementById('couponCode');
            const errorSpan = document.getElementById('applayerror');
            const discountDiv = document.querySelector('.discount-charge');
            const couponDiscountSpan = document.getElementById('coupondiscount');
            const subtotalSpan = document.getElementById('subtotal');
            const totalSpan = document.getElementById('total');

            applyButton.addEventListener('click', function() {
                const code = couponInput.value.trim();
                if (code) {
                    // Simulate coupon validation (replace with actual API call)
                    if (code.length === 7) {
                        const discount = calculateDiscount(parseFloat(subtotalSpan.textContent.replace('₹ ', '')));
                        applyCoupon(code, discount);
                        errorSpan.textContent = '';
                    } else {
                        errorSpan.textContent = 'Invalid coupon code';
                    }
                }
            });

            removeCouponButton.addEventListener('click', function() {
                removeCoupon();
            });

            function calculateDiscount(amount) {
                // Simulate discount calculation (replace with actual logic)
                return amount * 0.1; // 10% discount
            }

            function applyCoupon(code, discount) {
                couponCodeSpan.textContent = code;
                activeCouponBadge.classList.add('active');
                couponInput.value = '';
                couponInput.disabled = true;
                applyButton.disabled = true;
                
                discountDiv.classList.remove('d-none');
                discountDiv.classList.add('d-flex');
                couponDiscountSpan.textContent = `- ₹ ${discount.toFixed(2)}`;
                
                updateTotal(discount);
            }

            function removeCoupon() {
                activeCouponBadge.classList.remove('active');
                couponInput.disabled = false;
                applyButton.disabled = false;
                
                discountDiv.classList.remove('d-flex');
                discountDiv.classList.add('d-none');
                
                updateTotal(0);
            }

            function updateTotal(discount) {
                const subtotal = parseFloat(subtotalSpan.textContent.replace('₹ ', ''));
                const newTotal = subtotal - discount;
                totalSpan.textContent = `₹ ${newTotal.toFixed(2)}`;
            }
        });
    </script>
</body>
</html>