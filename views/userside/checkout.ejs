<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Elegant Checkout Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .container {
            background-color: #ffffff;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            padding: 30px;
            margin-top: 50px;
        }
        h2, h3 {
            color: #0d6efd;
            margin-bottom: 20px;
        }
        .address-card {
            border: 2px solid #e9ecef;
            border-radius: 10px;
            padding: 15px;
            cursor: pointer;
            transition: all 0.3s;
            height: 100%;
        }
        .address-card:hover, .address-card.selected {
            border-color: #0d6efd;
            background-color: #e7f1ff;
        }
        .address-card input[type="radio"] {
            display: none;
        }
        .btn-primary {
            background-color: #0d6efd;
            border: none;
            padding: 7px 10px;
            
        }
        .btn-primary:hover {
            background-color: #0b5ed7;
        }
        .product-list {
            margin-bottom: 20px;
        }
        .product-item {
            border-bottom: 1px solid #e9ecef;
            padding: 10px 0;
        }
        .summary-card {
            background-color: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h2 class="mb-4">Checkout</h2>
                <form id="checkoutForm">
                    <h3>Your Cart</h3>
                    <div class="product-list">
                        <% cart.product.forEach(product=>{ %>
                        <div class="product-item d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-0"><%= product.productid.name %></h6>
                                <p class="text">Quantity: <%= product.quantity %></p>
                            </div>
                            <span>â‚¹  <%=product.productid.price  %></span>
                        </div>
                        <% } )%>
                    </div>

                    <h3>Delivery Address</h3>
                    <div class="row">
                        <% if (savedAddresses && savedAddresses.length > 0) { %>
                            <% savedAddresses.forEach(function(address, index) { %>
                                <div class="col-md-5 mb-3">
                                    <label class="address-card" for="address-<%= index %>">
                                        <input type="radio" id="address-<%= index %>" name="selectedAddress" value="<%= address.id %>">
                                        <strong><%= address.fullname %></strong><br>
                                        <%= address.addressline1 %>,<%= address.addressline2 %>, <br> <%= address.city %>, <%= address.state %>, <%= address.country %><br>
                                        <%= address.zipCode %>
                                    </label>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <p>No saved addresses available. Please add a new address.</p>
                        <% } %>
                    </div>

                    <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#addAddressModal">
                        Add New Address
                    </button>

                </form>
            </div>
            <div class="col-md-4">
                <div class="summary-card">
                    <h3>Order Summary</h3>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Subtotal</span>
                        <span id="subtotal" class="summary-total">$<%=cart.totalprice%></span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-4">
                        <strong>Total</strong>
                        <strong id="total" class="summary-total">$<%=cart.totalprice%></strong>
                    </div>
                    <form class="paymentclass" >
                    <div class="mb-3">
                        <h4>Select Payment Method</h4>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="paymentMethod" id="onlinePayment" value="Credit Card" >
                            <label class="form-check-label" for="onlinePayment">
                                Online Payment
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="paymentMethod" id="codPayment" value="Cash on Delivery" checked>
                            <label class="form-check-label" for="codPayment">
                                Cash on Delivery (COD)
                            </label>
                        </div>
                    </div>
                    
                    <button class="btn btn-primary w-100 placeorderbtn" type="submit">Place Order</button>
                </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Address Modal -->
    <div class="modal fade" id="addAddressModal" tabindex="-1" aria-labelledby="addAddressModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addAddressModalLabel">Add New Address</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="newAddressForm">
                        <div class="mb-3">
                            <label for="fullName" class="form-label">Full Name</label>
                            <input type="text" class="form-control" id="fullName" name="fullName" required>
                        </div>
                        <div class="mb-3">
                            <label for="addressLine1" class="form-label">Address Line 1</label>
                            <input type="text" class="form-control" id="addressLine1" name="addressLine1" required>
                        </div>
                        <div class="mb-3">
                            <label for="addressLine2" class="form-label">Address Line 2</label>
                            <input type="text" class="form-control" id="addressLine2" name="addressLine2">
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="city" class="form-label">City</label>
                                <input type="text" class="form-control" id="city" name="city" required>
                            </div>
                            <div class="col-md-6">
                                <label for="state" class="form-label">State</label>
                                <input type="text" class="form-control" id="state" name="state" required>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="zipCode" class="form-label">ZIP Code</label>
                                <input type="text" class="form-control" maxlength="6" pattern="\d{6}" id="zipCode" name="zipCode" required>
                            </div>
                            <div class="col-md-6">
                                <label for="country" class="form-label">Country</label>
                                <select class="form-select" id="country" name="country" required>
                                    <option value="">Select Country</option>
                                    <option value="US">United States</option>
                                    <option value="CA">Canada</option>
                                    <option value="CA">India</option>
                                </select>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="phoneNumber" class="form-label">Phone Number</label>
                            <input type="text" id="phoneNumber" name="phoneNumber" class="form-control" pattern="[0-9]*" maxlength="10" required>
                        </div>
                        <div class="mb-3">
                            <label for="addressType" class="form-label">Address Type</label>
                            <select class="form-select" id="addressType" name="addressType" required>
                                <option value="home">Home</option>
                                <option value="work">Work</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                        <div class="text-end">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Save Address</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/user/checkout.js"></script>
    <script>
        // selected address 
        const addressCards = document.querySelectorAll('.address-card');
        addressCards.forEach(card => {
            card.addEventListener('click', () => {
                addressCards.forEach(c => c.classList.remove('selected'));
                card.classList.add('selected');
                card.querySelector('input[type="radio"]').checked = true;
            });
        });
    </script>
</body>
</html>