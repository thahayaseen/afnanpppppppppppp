<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Page</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/homepage.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <style>
        #maininagediv {
            position: relative;
            width: auto;
            height: auto;
            margin: 20px auto;
            overflow: hidden;
            background: #000;
            --url: url(/uploads/<%= product.images[0] %>);
            --zoom-x: 0%;
            --zoom-y: 0%;
            --display: none;
        }

        #maininagediv img {
            width: 100%;
            height: 100%;
            display: block;
        }

        #maininagediv::after {
            content: '';
            display: var(--display);
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: var(--url);
            background-size: 200%;
            background-position: var(--zoom-x) var(--zoom-y);
            transition: opacity 0.2s;
        }
        .reiviewsecrtion{
            padding-left: 50px;
        }
       
    </style>
</head>

<body>
  
    <!-- content -->
  <%-include('./navbar')%>
  <nav class="container mx-auto px-4 py-3 text-gray-700" aria-label="Breadcrumb">
    <ol class="list-reset flex">
        <li><a href="/home" class="text-blue-600 hover:text-blue-800">Home</a></li>
        <li><span class="mx-2">/</span></li>
        <li><a href="/product" class="text-blue-600 hover:text-blue-800">Product</a></li>
        <li><span class="mx-2">/</span></li>
        <li class="text-gray-500"><%= product.name %></li>
    </ol>
</nav>
    <section class="py-5">
      
      <div class="container mx-auto px-4">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-5">
              <!-- Image Section -->
              <aside class="flex flex-col items-center">
                  <div id="maininagediv" class="mb-3">
                      <img id="mainImage" src="/uploads/<%= product.images[0] %>" alt="Zoomable Image" />
                  </div>
                  <div class="flex justify-center mb-3 gap-3">
                      <% product.images.forEach((image, index) => { %>
                      <img width="110px" height="110px" class="rounded thumbnail cursor-pointer"
                          src="/uploads/<%= image %>" data-index="<%= index %>" />
                      <% }) %>
                  </div>
              </aside>
  
              <!-- Product Details Section -->
              <main class="flex flex-col justify-start">
                  <div class="pl-3">
                      <h4 class="text-xl font-bold text-gray-800">
                          <%= product.name %>
                      </h4>
                      <div class="flex items-center my-3">
                          <div class="flex text-yellow-500 mr-2">
                              <i class="fa fa-star"></i>
                              <i class="fa fa-star"></i>
                              <i class="fa fa-star"></i>
                              <i class="fa fa-star"></i>
                              <i class="fas fa-star-half-alt"></i>
                              <span class="ml-2 text-gray-600">4.5</span>
                          </div>
                          <span class="text-gray-500 mx-2"><i class="fas fa-shopping-basket"></i> <%= product.stock %></span>
                          <% if (product.stock > 0) { %>
                          <span class="text-green-500 ml-2">In stock</span>
                          <% } else { %>
                          <span class="text-red-500 ml-2">Out of stock</span>
                          <% } %>
                      </div>
  
                      <div class="mb-3">
                        <span class="text-xl font-semibold">
                            <del class="text-gray-500 me-2">$<%= product.price + 100 %></del> 
                            <span class="text-success">$<%= product.price %></span> 
                        </span>
                    </div>
                    
                    
  
                      <p class="text-gray-600">
                          <%= product.description %>
                      </p>
  
                      <!-- Quantity input -->
                        <% if(product.stock>0){ %>
                            <div class="my-3">
                                <label class="block mb-2 text-gray-700">Quantity</label>
                                <div class="flex items-center border border-gray-300 rounded-md w-44">
                                    <button class="bg-gray-100 px-3 py-2 text-gray-700 hover:bg-gray-200">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <input type="number" class="w-full text-center border-l border-r border-gray-300 focus:outline-none"
                                        placeholder="0" />
                                    <button class="bg-gray-100 px-3 py-2 text-gray-700 hover:bg-gray-200">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </div>
                            </div>
        
                            <div class="flex gap-3 mt-4">
                                <a href="#" class="bg-yellow-500 text-white px-4 py-2 rounded shadow hover:bg-yellow-600">Buy now</a>
                                <a href="#" class="bg-blue-500 text-white px-4 py-2 rounded shadow hover:bg-blue-600"><i
                                        class="mr-1 fa fa-shopping-basket"></i> Add to cart</a>
                                <a href="#" class="bg-gray-200 text-gray-700 px-4 py-2 rounded shadow hover:bg-gray-300"><i
                                        class="mr-1 fa fa-heart"></i> Save</a>
                            </div>
                            <% }else{ %>
                                <p class="mt-2 text-red-500">Out of Stock</p>
      <button class="mt-2 px-4 py-2 bg-blue-500 text-white rounded">Notify Me</button>
      <% } %>
                  </div>
              </main>
          </div>
      </div>
      <div class="container mx-auto reiviewsecrtion mt-5">
        <h2 class="text-2xl font-semibold mb-4">Write a Review</h2>
        <form>
            <!-- Review Text Area -->
            <div class="mb-4">
                <label for="review" class="block text-lg font-medium text-gray-700 mb-2">Your Review</label>
                <textarea class="w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:border-blue-500"
                    id="review" rows="4" placeholder="Write your review here..."></textarea>
            </div>
    
            <!-- Rating Section -->
            <div class="mb-4">
                <label class="block text-lg font-medium text-gray-700 mb-2">Rating</label>
                <div class="flex space-x-2 text-yellow-500">
                    <i class="fas fa-star cursor-pointer hover:text-yellow-600" id="star1"></i>
                    <i class="fas fa-star cursor-pointer hover:text-yellow-600" id="star2"></i>
                    <i class="fas fa-star cursor-pointer hover:text-yellow-600" id="star3"></i>
                    <i class="fas fa-star cursor-pointer hover:text-yellow-600" id="star4"></i>
                    <i class="fas fa-star cursor-pointer hover:text-yellow-600" id="star5"></i>
                </div>
            </div>
    
            <!-- Submit Button -->
            <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600 transition duration-300">
                Submit Review
            </button>
        </form>
    </div>
    
    <!-- User Reviews Section -->
    <div class="container mx-auto reiviewsecrtion  mt-10">
        <h2 class="text-2xl font-semibold mb-4">User Reviews</h2>
    
        <!-- Review 1 -->
        <div class="flex items-start space-x-4 mb-6">
            <img src="https://cdn.pixabay.com/photo/2016/11/08/15/21/user-1808597_1280.png" alt="User Logo" class="w-12 h-12 rounded-full">
            <div>
                <h4 class="text-lg font-semibold">John Doe</h4>
                <div class="flex space-x-1 text-yellow-500">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star-half-alt"></i>
                </div>
                <p class="text-gray-700 mt-2">I recently purchased this PC, and overall, I am quite impressed with its performance. The speed is great, and it handles gaming and video editing smoothly. I highly recommend it for power users.</p>
            </div>
        </div>
    
        <!-- Review 2 -->
        <div class="flex items-start space-x-4">
            <img src="https://cdn.pixabay.com/photo/2014/04/02/17/07/user-307993_1280.png" alt="User Logo" class="w-12 h-12 rounded-full">
            <div>
                <h4 class="text-lg font-semibold">Jane Smith</h4>
                <div class="flex space-x-1 text-yellow-500">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                </div>
                <p class="text-gray-700 mt-2">Amazing PC! It's super fast and handles my day-to-day tasks with ease. I've been using it for work and gaming, and the experience has been fantastic. The design is sleek too!</p>
            </div>
        </div>
    </div>
    
    <div class="container mx-auto  same-products-section mt-10">
        <h2 class="text-xl font-semibold mb-3">Related Products</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-3">
            <% sameProducts.forEach(product => { %>
                <div class="border rounded-lg overflow-hidden shadow-md">
                    <div id="maininagediv" class="mb-2">
                        <img id="mainImage" src="/uploads/<%= product.images[0] %>" alt="Zoomable Image" class="" />
                    </div>
                    <div class="p-3">
                        <h3 class="text-sm font-semibold"><%= product.name %></h3>
                        <p class="text-gray-800 font-bold mt-1 text-sm">$<%= product.price %></p>
                        <a href="/product/<%= product._id %>" class="bg-blue-500 text-white px-3 py-1 rounded mt-2 inline-block text-xs">View Product</a>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
    
  </section>
  

    <!-- content -->

    <!-- Footer -->
    <footer id="footer" class="bg-gray-800 py-8">
        <div class="container mx-auto px-4">
            <div class="flex flex-col md:flex-row justify-between items-center pb-6">
                <!-- Language Selection -->
                <div class="flex flex-col items-center md:items-end md:w-1/3 mb-6 md:mb-0">
                    <form class="w-full">
                        <label for="language"
                            class="block text-xs uppercase text-gray-400 mb-1">Language</label>
                        <div class="relative">
                            <select id="language"
                                class="w-full bg-gray-700 text-white border border-gray-600 rounded px-3 py-2">
                                <option value="en">English</option>
                                
                            </select>
                        </div>
                    </form>
                </div>

                <!-- Social Media Links -->
                <div class="flex justify-center space-x-6">
                    <a href="https://www.facebook.com/nzxt" target="_blank" rel="noopener noreferrer"
                        class="text-gray-400 hover:text-white">
                        <span class="sr-only">Facebook</span>
                        <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
