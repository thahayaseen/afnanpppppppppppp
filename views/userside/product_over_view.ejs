    <section class="py-5">
      
      <div class="container mx-auto px-4">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-5">
              <!-- Image Section -->
              <aside class="flex flex-col items-center">
                  <div id="maininagediv" class="mb-3">
                      <img id="mainImage" src="/uploads/<%= product.images[0] %>" alt="Zoomable Image" />
                  </div>
                  <div class="flex justify-center mb-3 gap-3">
                      <% product.images.forEach((image, index) => { %>
                      <img width="110px" height="110px" class="rounded thumbnail cursor-pointer"
                          src="/uploads/<%= image %>" data-index="<%= index %>" />
                      <% }) %>
                  </div>
              </aside>
  
              <!-- Product Details Section -->
              <main class="flex flex-col justify-start">
                  <div class="pl-3">
                      <h4 class="text-xl font-bold text-gray-800">
                          <%= product.name %>
                      </h4>
                      <div class="flex items-center my-3">
                          <div class="flex text-yellow-500 mr-2">
                              <i class="fa fa-star"></i>
                              <i class="fa fa-star"></i>
                              <i class="fa fa-star"></i>
                              <i class="fa fa-star"></i>
                              <i class="fas fa-star-half-alt"></i>
                              <span class="ml-2 text-gray-600">4.5</span>
                          </div>
                          <span class="text-gray-500 mx-2"><i class="fas fa-shopping-basket"></i> <%= product.stock %></span>
                          <% if (product.stock > 0) { %>
                          <span class="text-green-500 ml-2">In stock</span>
                          <% } else { %>
                          <span class="text-red-500 ml-2">Out of stock</span>
                          <% } %>
                      </div>
  
                      <div class="mb-3">
                          <span class="text-xl font-semibold">$<%= product.price %></span>
                      </div>
  
                      <p class="text-gray-600">
                          <%= product.description %>
                      </p>
  
                      <!-- Quantity input -->
                      <div class="my-3">
                          <label class="block mb-2 text-gray-700">Quantity</label>
                          <div class="flex items-center border border-gray-300 rounded-md w-44">
                              <button class="bg-gray-100 px-3 py-2 text-gray-700 hover:bg-gray-200">
                                  <i class="fas fa-minus"></i>
                              </button>
                              <input type="number" class="w-full text-center border-l border-r border-gray-300 focus:outline-none"
                                  placeholder="0" />
                              <button class="bg-gray-100 px-3 py-2 text-gray-700 hover:bg-gray-200">
                                  <i class="fas fa-plus"></i>
                              </button>
                          </div>
                      </div>
  
                      <div class="flex gap-3 mt-4">
                          <a href="#" class="bg-yellow-500 text-white px-4 py-2 rounded shadow hover:bg-yellow-600">Buy now</a>
                          <a href="#" class="bg-blue-500 text-white px-4 py-2 rounded shadow hover:bg-blue-600"><i
                                  class="mr-1 fa fa-shopping-basket"></i> Add to cart</a>
                          <a href="#" class="bg-gray-200 text-gray-700 px-4 py-2 rounded shadow hover:bg-gray-300"><i
                                  class="mr-1 fa fa-heart"></i> Save</a>
                      </div>
                  </div>
              </main>
          </div>
      </div>
  </section>
  
    <!-- content -->

    <!-- Footer -->
    <footer class="bg-blue-500 text-center text-white py-4">
        <!-- Section: Links  -->
        <section class="px-4">
            <div class="container mx-auto grid grid-cols-2 md:grid-cols-4 gap-4">
                <!-- Column 1 -->
                <div>
                    <h6 class="font-bold uppercase mb-2">Store</h6>
                    <ul class="text-gray-300 space-y-2">
                        <li><a href="#" class="hover:text-white">About us</a></li>
                        <li><a href="#" class="hover:text-white">Find store</a></li>
                        <li><a href="#" class="hover:text-white">Categories</a></li>
                        <li><a href="#" class="hover:text-white">Blogs</a></li>
                    </ul>
                </div>

                <!-- Column 2 -->
                <div>
                    <h6 class="font-bold uppercase mb-2">Information</h6>
                    <ul class="text-gray-300 space-y-2">
                        <li><a href="#" class="hover:text-white">Help center</a></li>
                        <li><a href="#" class="hover:text-white">Money refund</a></li>
                        <li><a href="#" class="hover:text-white">Shipping info</a></li>
                        <li><a href="#" class="hover:text-white">Refunds</a></li>
                    </ul>
                </div>

                <!-- Column 3 -->
                <div>
                    <h6 class="font-bold uppercase mb-2">Support</h6>
                    <ul class="text-gray-300 space-y-2">
                        <li><a href="#" class="hover:text-white">Help center</a></li>
                        <li><a href="#" class="hover:text-white">Documents</a></li>
                        <li><a href="#" class="hover:text-white">Account restore</a></li>
                        <li><a href="#" class="hover:text-white">My orders</a></li>
                    </ul>
                </div>

                <!-- Column 4 -->
                <div>
                    <h6 class="font-bold uppercase mb-2">Newsletter</h6>
                    <p>Stay in touch with the latest updates about our products and offers</p>
                    <div class="flex">
                        <input type="email" class="border border-gray-300 p-2 w-full" placeholder="Email">
                        <button class="bg-gray-100 text-gray-700 px-3 py-2 hover:bg-gray-200">Join</button>
                    </div>
                </div>
            </div>
        </section>
    </footer>
    <!-- Footer -->

    <script src="/js/user/viewproduct.js"></script>
    <script>
        const mainImageDiv = document.getElementById('maininagediv');
        const mainImage = document.getElementById('mainImage');
        const thumbnails = document.querySelectorAll('.thumbnail');

        thumbnails.forEach(thumbnail => {
            thumbnail.addEventListener('click', function () {
                // Get the source of the clicked thumbnail
                const newSrc = this.src;

                // Update the main image's source
                mainImage.src = newSrc;

                // Update the CSS variable --url to reflect the new image
                mainImageDiv.style.setProperty('--url', `url(${newSrc})`);
            });
        });
    </script>
</body>

</html>
