            <!-- Main Content -->
            <div class="col-lg-9">
                <h2>Recent Orders</h2>
                <% orders.forEach(order=> { %>
                    <div class="card mb-3">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span>Order #<%= order._id %></span>
                            <span class="badge bg-<%= order.status === 'Delivered' ? 'success' : 'primary' %>">
                                <%= order.status %>
                            </span>
                            <span class="badge bg-<% 
                            if (order.paymentStatus === 'Paid') { %>success<% 
                            } else if (order.paymentStatus === 'Pending') { %>warning<% 
                            } else if (order.paymentStatus === 'Failed') { %>danger<% 
                            } %>">
                            <%= order.paymentStatus %>
                        </span>
                        
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <h5>Products:</h5>
                                    <ul class="list-group">
                                        <% order.products.forEach(product=> { %>
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <div>
                                                    <%= product.productid.name %>
                                                    <% if (product.return === 'returnreq') { %>
                                                        <span class="return-status return-status-requested ml-2">Return Requested</span>
                                                    <% } else if (product.return === 'returned') { %>
                                                        <span class="return-status return-status-returned ml-2">Returned</span>
                                                    <% } else if (product.return === 'noreturn') { %>
                                                        <span class="return-status btn btn-danger return-status-noreturn ml-2">Cannot Return</span>
                                                    <% } else if (product.return === 'returning') { %>
                                                        <span class="return-status btn btn-success return-status-returning ml-2">Returning</span>
                                                    <% } %>
                                                </div>
                                                <div class="d-flex align-items-center">
                                                    <span class="badge bg-primary rounded-pill me-2">Qty: <%= product.quantity %></span>
                                                    <div class="btn-group">
                                                        <button class="btn btn-sm btn-info view-product" 
                                                                data-bs-toggle="modal" 
                                                                data-bs-target="#productModal"
                                                                data-product='<%= JSON.stringify(product.productid) %>'>
                                                            View
                                                        </button>
                                                        <% if (product.return === 'returnreq' || product.return === 'returned') { %>
                                                            <button class="btn btn-sm btn-secondary view-return-reason"
                                                                    data-bs-toggle="modal"
                                                                    data-bs-target="#returnReasonModal"
                                                                    data-return-reason="<%= product.returnReason %>"
                                                                    data-return-explanation="<%= product.returnExplanation %>">
                                                                View Return Details
                                                            </button>
                                                        <% } else if (order.status === 'Delivered' && product.return === 'notrequst') { %>
                                                            <button class="btn btn-sm btn-warning return-product"
                                                                    data-bs-toggle="modal"
                                                                    data-bs-target="#returnModal"
                                                                    data-order-id="<%= order._id %>"
                                                                    data-product-id="<%= product.productid._id %>">
                                                                Return
                                                            </button>
                                                        <% } %>
                                                    </div>
                                                </div>
                                            </li>
                                        <% }) %>
                                    </ul>
                                </div>
                                <div class="col-md-4">
                                    <p><strong>Date:</strong>
                                        <%= new Date(order.createdAt).toLocaleDateString() %>
                                    </p>
                                    <p><strong>Total:</strong>
                                        <%= (order.totalAmount-order.coupon.discount).toFixed(2) %>
                                    </p>
                                    <% if (order.status !=='Delivered' && order.status !=='Cancelled'&&order.paymentStatus!=='Failed' ) { %>
                                        <a data-orderid="<%= order._id %>" class="btn cancelbtn btn-danger">Cancel Order</a>
                                        <% }else if(order.paymentStatus=='Failed'){ %>
                                        <a data-orderid="<%= order._id %>" class="btn retrypayment btn-warning">RetryPayment</a>
                                            <%}%>
                                            <button class="btn btn-primary view-order-details" data-bs-toggle="modal"
                                                data-bs-target="#orderDetailsModal"
                                                data-order='<%= JSON.stringify(order) %>'>
                                                View Details
                                            </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </div>

